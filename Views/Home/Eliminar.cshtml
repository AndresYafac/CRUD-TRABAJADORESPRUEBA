@model TrabajadoresPrueba.Models.Trabajadore
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-danger"> ¿Está seguro de eliminar el registro?</h3>
<hr />
<div class="row">
    <div class="col-sm-4">

        <form asp-action="Eliminar" asp-controller="Home" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="mb-2">
                <label class="form-label" asp-for="TipoDocumento">Tipo Documeno</label>
                <select class="form-select form-select-sm" asp-for="TipoDocumento" disabled>
                    <option selected>--Seleccione--</option>
                    <option value="DNI">DNI</option>
                    <option value="RUC">RUC</option>
                    <option value="PASAPORTE">PASAPORTE</option>
                </select>
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="NumeroDocumento">Numero Documeno</label>
                <input class="form-control form-control-sm" asp-for="NumeroDocumento" type="number" disabled />
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="Nombres">Nombres</label>
                <input class="form-control form-control-sm" asp-for="Nombres" type="text" disabled />
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="Sexo">Sexo</label>
                <input class="form-control form-control-sm" asp-for="Sexo" type="text" disabled />
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="IdDepartamento">Departamento</label>
                <input class="form-control form-control-sm" asp-for="oDepartamento.NombreDepartamento" type="text" disabled />
            </div>

            <div class="mb-2">
      
                    <button class="btn-danger btn-sm w-25" type="submit">Eliminar</button>            
                <a class="btn btn-success btn-sm" asp-action="Index" asp-controller="Home">Volver</a>
            </div>
        </form>

    </div>

</div>
